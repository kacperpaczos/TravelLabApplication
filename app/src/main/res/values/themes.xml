<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Bazowy motyw aplikacji -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!-- Motyw ekranu powitalnego -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowSplashScreenBackground">@drawable/splash_background_animation</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_animated</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Motyw ekranu powitalnego bez action bar -->
    <style name="Theme.App.Starting.NoActionBar" parent="Theme.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowSplashScreenBackground">@drawable/splash_background_animation</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_animated</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
    </style>

    <style name="AppTheme.DetailActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>