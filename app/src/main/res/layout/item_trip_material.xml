<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Name"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/trip_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Description"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/trip_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Cost"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/trip_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Rating"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/trip_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Guide"
            android:textAppearance="?attr/textAppearanceBody2" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
